{{setPageTitle "Auction House"}}

<section id="catalog-section">

    <h1 class="item">
        Fishing Boat
        {{#if isOwner}}
            <div class="f-right">
                <a class="action pad-small f-left" href="#">Edit</a>
                <a class="action pad-small f-left" href="#">Delete</a>
            </div>
        {{/if}}
    </h1>
    <div class="item padded">

        <div class="layout right large">

            <div class="col">
                <img src="/static/assets/boat.jpg" class="img-large">
            </div>

            <div class="content pad-med">

                <p>In category: <strong>Vehicles</strong></p>
                <p>Excellent condition. Onboard diesel motor, upholstered cockpit, fishing sonar. Includes
                    trailer.</p>

                <div class="align-center">
                    <div>
                        Current price: $<strong>5000</strong>
                    </div>

                    {{#if isOwner}}
                        <div>
                            <!-- If there is a bidder -->
                            Bid by <strong>John Maclane</strong>

                            <!-- # Bonus: If there is a bidder -->

                            <a class="action pad-med cta" href="#">Close Auction</a>

                            <!-- # End of Bonus -->

                            <!-- If there are no bids -->
                            No bids
                        </div>
                    {{else}}
                        <!-- If current user can place a bid -->
                        <form class="vertical" method="post" action="#">
                            <label><span>Bid amount</span><input type="number" name=""></label>
                            <input class="action" type="submit" value="Place bid">
                        </form>

                        <!-- If current user is the bidder -->
                        <div>
                            You are currently the <strong>highest bidder</strong> for this auction
                        </div>
                    {{/if}}
                </div>

            </div>
        </div>

        <footer>Listed by Peter Jackson</footer>
    </div>

</section>