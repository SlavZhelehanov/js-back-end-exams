{{setPageTitle "Edit Product - GlowAlchemy"}}

<section class="form-container">
    <h2>Edit Recipe</h2>
    <form method="post">
        <label for="name">Product Name:</label>
        <input type="text" id="name" name="name" value="{{cosmetic.name}}">

        <label for="skin">Skin Type:</label>
        <textarea id="skin" name="skin">Suitable for: {{cosmetic.skin}}</textarea>

        <label for="description">Product Description:</label>
        <textarea id="description" name="description">{{cosmetic.description}}</textarea>

        <label for="ingredients">Key Ingredients:</label>
        <textarea id="ingredients" name="ingredients">{{cosmetic.ingredients}}</textarea>

        <label for="benefits">Benefits:</label>
        <textarea id="benefits" name="benefits">{{cosmetic.benefits}}</textarea>

        <label for="price">Price:</label>
        <input type="number" id="price" name="price" value="{{cosmetic.price}}">

        <label for="image">Image URL:</label>
        <input type="url" id="image" name="image" value="{{cosmetic.image}}">

        <button type="submit">Edit Product</button>
    </form>
</section>