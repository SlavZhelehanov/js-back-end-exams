{{setPageTitle "Search Products - GlowAlchemy"}}

<section class="search-container">
    <h2>Search Products</h2>
    <form method="get">
        <input type="text" id="search" name="search" placeholder="Search for products..." value="{{search}}">
        <button type="submit">Search</button>
    </form>
    <div class="search-results">
        {{#each cosmetics}}
            {{> cosmetic}}
        {{else}}
            <p class="no-match">There are no products found yet!</p>
        {{/each}}
    </div>
</section>