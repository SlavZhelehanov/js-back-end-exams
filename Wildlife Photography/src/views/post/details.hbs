{{setPageTitle "Details Page"}}

<section id="details-page">

    <div class="main_card">
        <div class="card_left">
            <div class="card_datails">

                <h1>Title: {{title}}</h1>
                <h3>Created by an author: {{author.firstName}} {{author.lastName}}</h3>
                <div class="card_animal">
                    <p class="card-keyword">Keyword: {{keyword}}</p>
                    <p class="card-location">Location: {{location}}</p>
                    <p class="card-date">Date: {{date}}</p>
                </div>

                <p class="disc">Description: {{description}}</p>

                {{#if user}}
                    <div class="social-btn">
                        {{#if isAuthor}}
                            <a href="/posts/{{_id}}/edit" class="edit-btn">Edit</a>
                            <a href="/posts/{{_id}}/delete" class="del-btn">Delete</a>
                        {{else}}
                            {{#unless isVoted}}
                                <a href="/posts/{{_id}}/voteUp" class="vote-up">UpVote +1</a>
                                <a href="/posts/{{_id}}/voteDown" class="vote-down">DownVote -1</a>
                            {{else}}
                                <p class="thanks-for-vote">Thanks For Voting</p>
                            {{/unless}}
                        {{/if}}
                    </div>
                {{/if}}
            </div>
        </div>
        <div class="card_right">
            <img src="{{image}}" alt="{{title}}">
        </div>
    </div>

</section>

<section id="votes">
    <div class="vote-info">
        <div class="card_left">
            <div class="card_datails">
                <h1>Votes</h1>
                <div class="card_vote">
                    <p class="PV">Total rating of votes: {{votes.length}}</p>
                </div>
                <p class="disc">People who voted for the post - {{#if voters}}{{voters}}{{else}}No one has voted yet.{{/if}}</p>
            </div>
        </div>
    </div>
</section>