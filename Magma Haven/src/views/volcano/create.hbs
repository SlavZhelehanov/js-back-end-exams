{{setPageTitle "Create Page"}}

<section id="create-container">
    <div class="create-container-info">
        <h1>Create Volcano Wiki</h1>
        <form method="post">
            <label>Name:</label>
            <input type="text" id="name" name="nameOfTheVolcano" placeholder="..." value="{{nameOfTheVolcano}}">
            <label>Location:</label>
            <input type="text" id="location" name="location" placeholder="..." value="{{location}}">
            <label>Elevation:</label>
            <input type="number" id="elevations" name="elevation" placeholder="..." value="{{elevation}}">
            <label>Year of Last Eruption:</label>
            <input type="number" id="last-year-eruption" name="lastEruption" placeholder="..." value="{{lastEruption}}" >
            <label>Image:</label>
            <input type="text" id="image" name="image" placeholder="http://..." value="{{image}}">
            <label>Volcano Type:</label>
            <select id="type" name="typeOfVolcano">
                {{#each volcanoTypes}}
                    <option value="{{label}}" {{selected}}>{{value}}</option>
                {{/each}}
            </select>
            <label>Description:</label>
            <textarea id="description" name="description" placeholder="...">{{description}}</textarea>
            <input type="submit" id="btn" value="Submit"></input>
        </form>
    </div>
</section>