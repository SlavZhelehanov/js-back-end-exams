{{setPageTitle "Catalog"}}

<section id="all-listings">
    <h1>Apartments for recents</h1>

    {{#each housings}}
        <div class="card">
            <h3>{{name}}</h3>
            <p>{{description}}</p>

            <div class="cta-container"><a href="/housings/{{id}}/details" class="det-link">Details</a></div>
            <div class="card_circle"><img src="{{image}}"></div>

        </div>
    {{else}}
        <div class="no-data-listing">
            <p class="no-offer">There are no housing offers found...</p>
        </div>
    {{/each}}
</section>