{{setPageTitle "Details Trip"}}

<section class="py-5 details" id="trip-details-page">
    <div class="container">
        <div class="destination">
            <div>
                <span class="icon"><i class="fas fa-map-marked-alt"></i></span>
                <h5> from <span>{{startPoint}}</span> to <span>{{endPoint}}</span> </h5>
            </div>
            <div>
                <span class="icon"><i class="fas fa-calendar-alt"></i></span>
                <h5> <span>{{date}}</span> at <span>{{time}}</span> </h5>
            </div>
        </div>
        <p class="line"></p>
        <div class="buddies-info">
            <i class="fas fa-users buddies"></i>
            <h5>Shared trip Buddies</h5>
            <div>
                <!-- if there are joined buddies for the current trip separate them with comma and space", " -->
                <p>{{#if passengers}}{{passengers}}{{else}}there are no buddies yet...{{/if}}</p>

                <!-- If not display: -->
                {{!-- <p>there are no buddies yet...</p> --}}
            </div>
            <h5>Driver: <span>{{creator.email}}</span> </h5>
        </div>
        <p class="line"></p>
        <h5 class="brand">Car Brand: <span class="lead">{{brand}}</span></h5>
        <div class="trip-info">
            <div>
                <img class="img-fluid rounded"
                    src="{{image}}"
                    alt="car-image">
            </div>
            <div class="trip-desc">
                <h5>Information about the trip</h5>
                <textarea class="lead"
                    disabled>{{description}}</textarea>
                <h5>Price: <span class="lead">{{price}}</span> BGN</h5>

                {{#if user}}
                    <div class="actions">
                        {{#if isCreator}}
                            <a href="/trips/{{_id}}/delete" class="btn btn-danger">Delete this trip</a>
                            <a href="/trips/{{_id}}/edit" class="btn btn-warning">Edit this trip</a>
                        {{else}}
                            {{#unless isJoined}}
                                {{#if availableSeats}}
                                    <a href="/trips/{{_id}}/join" class="btn btn-join">Join now, [ {{availableSeats}} ] seats left!</a>
                                {{else}}
                                    <span class="btn btn-secondary">No seats available! [0]</span>
                                {{/if}}
                            {{else}}
                                <span class="btn btn-info">Already joined. Don't be late!</span>
                            {{/unless}}
                        {{/if}}
                    </div>
                {{/if}}
            </div>
        </div>
    </div>
</section>