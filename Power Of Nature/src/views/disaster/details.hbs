{{setPageTitle "Details Page"}}

<section id="details-info">
    <h1>Details</h1>
    <div class="image">
        <img src="{{disaster.image}}">
    </div>

    <div class="info">
        <div class="text">
            <h1 id="name">{{disaster.nameOfTheDisaster}}</h1>
            <h3 id="location">Location: {{disaster.location}}</h3>
            <p id="type">Type: {{disaster.typeOfDisaster}}</p>
            <p id="year"><span>Year of the Event: {{disaster.yearOfTheEvenet}}</span></p>
            <p id="interested">Interested: {{disaster.interestedList.length}}</p>
            <p id="description">{{disaster.description}}</p>
        </div>
        {{#if user}}
            <div class="product-btn">
                {{#if isOwner}}
                    <!--Only for registered user and author of the publication -->                
                    <div class="author">
                        <a href="/disasters/{{disaster.id}}/edit" class="btn-edit">Edit</a>
                        <a href="/disasters/{{disaster.id}}/delete" class="btn-delete">Delete</a>
                    </div>
                {{else}}
                    {{#if isInterested}}
                        <!-- Logged in user who has already interested for this post-->
                        <p class="interested-message">You've already been interested in this event!</p>
                    {{else}}
                        <!-- Logged in user who has not yet interested for this post-->
                        <a href="/disasters/{{disaster.id}}/interested" class="btn-interested">Interested</a>
                    {{/if}}
                {{/if}}
            </div>
        {{/if}}
    </div>
</section>