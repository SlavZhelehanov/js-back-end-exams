{{setPageTitle "Create Page - Gaming Team"}}
{{setPageMain "create"}}

<section id="create-container">
    <div class="create-container-info">
        <h1>Create Game Code Offer</h1>
        <h4>Post your code to sell</h4>
        <form method="post">
            <label>Platform:</label>
            <select id="platform" name="platform">
                {{#each types}}
                    <option value="{{label}}" {{selected}}>{{value}}</option>
                {{/each}}
            </select>
            <label>Name:</label>
            <input type="text" id="name" name="name" value="{{name}}">
            <label>Image:</label>
            <input type="text" id="image" name="image" placeholder="http://..." value="{{image}}">
            <label>Price:</label>
            <input type="number" id="price" name="price" value="{{price}}">
            <label>Genre:</label>
            <input type="text" id="genre" name="genre" value="{{genre}}">
            <label>Description:</label>
            <textarea id="description" name="description">{{description}}</textarea>

            <input type="submit" id="btn" value="CREATE"></input>
        </form>
    </div>
</section>