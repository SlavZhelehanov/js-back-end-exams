{{setPageTitle "Search - Gaming Team"}}
{{setPageMain "search"}}

<section class="game-search">
    <h1>Search</h1>

    <form class="search-form" method="get">
        <input type="text" class="search-game" name="name" placeholder="Search here..." value="{{name}}">
        <select id="platform" name="platform">
            {{#each types}}
            <option value="{{label}}" {{selected}}>{{value}}</option>
            {{/each}}
        </select>
        <button type="submit" class="btn-search">Search</button>
    </form>

    {{#if games}}
        <div class="search-result">
            <div class="search-list">
                {{#each games}}
                    {{> game}}
                {{/each}}
            </div>
        </div>
    {{else}}
    <div class="no-match">
        <p>No match was found!</p>
    </div>
    {{/if}}
</section>