{{setPageTitle "Create Page"}}

<section id="create-container">
    <div class="create-container-info">
        <h1>Create Announcement</h1>
        <h4>Post your coins to sell</h4>
        <form method="post">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" placeholder="Bitcoin" value="{{name}}">
            <label for="image">Image:</label>
            <input type="text" id="image" name="image" placeholder="http://..." value="{{image}}">
            <label for="price">Price:</label>
            <input type="number" id="price" name="price" placeholder="31,166.71" value="{{price}}">
            <label for="description">Description:</label>
            <textarea id="description" name="description" placeholder="Introduce your coins...">{{description}}</textarea>
            <label for="payment">Payment method:</label>
            <select id="payment" name="payment">
                {{#each types}}
                    <option value="{{value}}" {{selected}}>{{label}}</option>
                {{/each}}
            </select>
            <input type="submit" id="btn" value="TRADE"></input>
        </form>
    </div>
</section>