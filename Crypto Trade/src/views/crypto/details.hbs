{{setPageTitle "Details Page"}}

<section id="details-info">
    <h1>Details</h1>
    <div class="coin-image">
        <img src="{{image}}">
    </div>

    <div class="coin-info">
        <div class="coin-text">
            <h1 id="name">{{name}}</h1>
            <h3 id="payment">Payment method: {{payment}}</h3>
            <p id="price"><span>Price: ${{price}}</span></p>
            <p id="description">{{description}}</p>
        </div>
        <div class="product-btn">
            {{#if user}}
                {{#if isOwner}}
                    <div class="author">
                        <a href="/cryptos/{{_id}}/edit" class="btn-edit">Edit</a>
                        <a href="/cryptos/{{_id}}/delete" class="btn-delete">Delete</a>
                    </div>
                {{else}}
                    {{#unless isBuyer}}
                        <a href="/cryptos/{{_id}}/buy" class="btn-buy">Buy</a>
                    {{else}}
                        <p class="buy-message">You already bought these crypto coins.</p>
                    {{/unless}}
                {{/if}}
            {{/if}}
        </div>
    </div>
</section>